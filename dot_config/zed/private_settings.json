// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4"
    },
    "version": "2"
  },
  "language_models": {
    "ollama": {}
  },
  "vim_mode": true,
  "telemetry": {
    "metrics": false
  },
  "ui_font_size": 16,
  "buffer_font_size": 14,
  "buffer_font_family": "Dank Mono",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Dracula"
  },
  "relative_line_numbers": true,
  "tab_bar": {
    "show": true
  },
  "scrollbar": {
    "show": "never"
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "centered_layout": {
    "left_padding": 0.2,
    "right_padding": 0.2
  },
  // "assistant": {
  //   "default_model": {
  //     "provider": "ollama",
  //     "model": "codegemma:latest"
  //   },
  //   "version": "2",
  //   "provider": null
  // },
  "inlay_hints": {
    "enabled": false
  },
  "format_on_save": "on",
  "use_autoclose": true,
  "formatter": {
    "code_actions": {
      "source.fixAll.eslint": true,
      "source.organizeImports": true
    }
  },
  "languages": {
  }
}
